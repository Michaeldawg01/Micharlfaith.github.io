/* style.css */

body {
  margin: 0;
  padding: 0;
  font-family: 'Poppins', sans-serif;
  background: linear-gradient(135deg, #c9d6ff, #e2e2e2);
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.container {
  background: white;
  padding: 40px;
  border-radius: 15px;
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
  max-width: 600px;
}

h1 {
  font-size: 2.5em;
  color: #2b2b2b;
}

p {
  font-size: 1.2em;
  color: #444;
}

.quote {
  margin-top: 30px;
  font-style: italic;
  color: #6b6b6b;
  border-left: 4px solid #888;
  padding-left: 15px;
}
